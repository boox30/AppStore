<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AppInfoListActivity">

    <include
        layout="@layout/title_bar"
        android:visibility="gone" />

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/small_type_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@android:color/white"
        app:pstsIndicatorColor="@android:color/holo_blue_light"
        app:pstsIndicatorHeight="2dp"
        app:pstsShouldExpand="false"
        app:pstsTabTextColor="@android:color/holo_blue_light"
        app:pstsTabTextSize="@dimen/small_tab_text_size" />

    <android.support.v4.view.ViewPager
        android:id="@+id/small_type_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>