<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/item_padding"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/app_type_icon"
        android:layout_alignParentLeft="true"
        android:layout_width="@dimen/app_icon_width"
        android:layout_height="@dimen/app_icon_width" />

    <TextView
        android:id="@+id/app_type_name"
        android:layout_toRightOf="@id/app_type_icon"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/app_type_name"
        android:id="@+id/app_type_des"
        android:maxLines="2"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        />

</RelativeLayout>